
<% @articles.each do |article, i| %>
	<h3><%= article.id %>. <%= article.title %></h3>
<p>
	<%= article.text %>
</p>
<p>
	<%= link_to 'Show', article_path(article) %>
	<%= link_to 'Edit', edit_article_path(article) %>
	<%= link_to 'Dstroy', article_path(article), method: :delete %>
</p>
<hr>
<% end %>