<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>
<hr>
<br>
<h3>Comments</h3>
<% @article.comments.each do |f| %>
	<% if f.author != nil %>
	<p>
		<i><%= f.author %>  said:</i>
	</p>
	<p>
		Text: <%= f.body %>
	</p>
	
	<% end%>
<% end %>
<p>
<%= form_for ([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
		
	</p>
<% end %>

</p>